<h1> Edit a wife </h1>
<%= simple_form_for [:admin, @wife ] do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :salary, :label => "薪水" %>
  <%= f.input :age, :label => "年龄" %>
  <%= f.input :city, :label => "城市"%>
  <%= f.input :contact_email %>
  <%= f.input :is_hidden %>
  <%= f.submit "Submit" %>
  <br>
  <% if @wife.image.present? %>
    <span>beauty</span> <br>
    <%= image_tag(@wife.image.thumb.url) %>
  <% end %>
  <div class="group">
    <%= f.input :image, as: :file %>
  </div>
<% end %>

<table class="table table-boldered">
  <thead>
    <tr>
      <td>女神</td>
      <td>薪资</td>
      <td>芳龄</td>
      <td>城市</td>
      <td>刊登时间</td>
    </tr>
  </thead>
  <tbody>
    <% @wives.each do |wife| %>
      <tr>
        <td>
          <%= link_to(wife.title, wife_path(wife)) %>
        </td>
        <td>
          <%= wife.salary %>
        </td>
        <td>
          <%= wife.age%>
        </td>
        <td><%= wife.city%></td>
        <td>
          <%= wife.created_at %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
